{
  "buildCommand": "echo 'Building portfolio'",
  "outputDirectory": ".",
  "public": true,
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600"
        }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/(?!assets/|favicon\\.ico|.*\\.pdf|.*\\.png|.*\\.jpg|.*\\.svg)(.*)",
      "destination": "/index.html"
    }
  ],
  "cleanUrls": true
}
